<%= form_for([:admin, admin_field_form]) do |form| %>
  <% if admin_field_form.errors.any? %>
    <div class="alert alert-info alert-dismissible" style="margin: 15px 15px 0 15px;">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h5><i class="icon fas fa-info"></i> <%= pluralize(admin_field_form.errors.count, 'erro impede', plural: 'erros impedem') %> que esta fichas de campo seja salva:</h5>
      
      <ul>
        <% admin_field_form.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <div class="form-group">
      <%= form.label :street %>
      <%= form.text_field :street, class: 'form-control', disabled: true %>
    </div>

    <div class="form-group">
      <%= form.label :number %>
      <%= form.text_field :number, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class="card-footer">
    <%= link_to "#{translate 'actions.back'}", admin_field_forms_path, class: 'btn btn-secondary' %>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
