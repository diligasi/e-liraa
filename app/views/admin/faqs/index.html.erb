<section class="content-header">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Listagem de FAQs</h1>
        </div>
        
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><%= link_to 'Home', admin_root_path %></li>
            <li class="breadcrumb-item active">Listagem de FAQs</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <div class="col-sm-12">
              <%= link_to new_admin_faq_path, class: 'btn bg-gradient-primary btn-sm  float-sm-right' do %>
                <i class="nav-icon fas fa-plus"></i>
              <% end %>
            </div>
          </div>
          
          <div class="card-body p-0">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Pergunta</th>
                  <th>Resposta</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @admin_faqs.each do |admin_faq| %>
                  <tr>
                    <td><%= admin_faq.question %></td>
                    <td><%= admin_faq.answer.truncate(50) %></td>
                    <td><%= link_to "#{translate 'actions.show'}", admin_faq_path(admin_faq), class: 'btn btn-block bg-gradient-info btn-sm' %></td>
                    <td><%= link_to "#{translate 'actions.edit'}", edit_admin_faq_path(admin_faq), class: 'btn btn-block bg-gradient-primary btn-sm' %></td>
                    <td><%= link_to "#{translate 'actions.destroy'}", admin_faq_path(admin_faq), class: 'btn btn-block bg-gradient-danger btn-sm', method: :delete, data: { confirm: "#{translate 'confirm'}" } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>

          <br />

          <div class="card-footer clearfix">
            <%= paginate @admin_faqs %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
